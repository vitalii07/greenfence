<div class="view_container">

  <div class="add_info_main_header">
    <h1 class="content_headline">Supply Chain Visibility Settings</h1>
    <a class="wizard_add_butt_v2" ng-click="saveVisibility()"><%= t('save') %></a>
  </div>

  <div class="add_info_block">
    <div class="add_info_header">
      <div class="add_info_title">My Visibility</div>
      <div class="add_info_colapse_butt"></div>
    </div>
    <div class="add_info_content_block">
      <div class="add_info_form_block ">
        <div class="add_info_form_w">
          <ul class="options_b_value_list checkbox_list_mod">
           <li class="options_b_value_l_item checkbox_list_mod">
            <label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
              <input name="Fields_list" class="lbl_inp_rb_ch" type="checkbox" ng-value="true" ng-model="visibility.hide_my_name"><span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod">Hide My Name</span>
            </label>            
          </li>
          <li class="options_b_value_l_item checkbox_list_mod">
            <label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
              <input name="Fields_list" class="lbl_inp_rb_ch" type="checkbox" ng-value="true" ng-model="visibility.hide_my_compliance"><span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod">Hide My Compliance </span>
            </label>            
          </li>
        </ul>
      </div>
      <div class="butt_wrap add_info_form_mod">
       <div class="butt_cancel">Cancel</div>
        <div class="butt_save" ng-click="saveVisibility(visibility)"><%= I18n.t('save') %></div>
     </div>
   </div>
 </div>
</div>
<div class="add_info_block">
  <div class="add_info_header">
    <div class="add_info_title">My Suppliers Visibility</div>
    <div class="add_info_colapse_butt"></div>
  </div>
  <div class="add_info_content_block">
    <div class="add_info_form_block ">
      <div class="add_info_form_w">
        <ul class="options_b_value_list checkbox_list_mod">
         <li class="options_b_value_l_item checkbox_list_mod">
          <label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
            <input name="Fields_list" class="lbl_inp_rb_ch" type="checkbox" ng-value="true" ng-model="visibility.hide_supplier_name"><span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod">Hide Names Of My Suppliers</span>
          </label>            
        </li>
        <li class="options_b_value_l_item checkbox_list_mod">
          <label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
            <input name="Fields_list" class="lbl_inp_rb_ch" type="checkbox" ng-value="true" ng-model="visibility.hide_supplier_compliance"><span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod">Hide Compliance Of My Suppliers</span>
          </label>            
        </li>
      </ul>
    </div>
    <div class="butt_wrap add_info_form_mod">
      <div class="butt_cancel">Cancel</div>
       <div class="butt_save" ng-click="saveVisibility(visibility)"><%= I18n.t('save') %></div>      
    </div>
  </div>
</div>
</div>
</div>