<article class="profile_card_block">
  <span class="corner_ico certificate_mod"></span>
  <div class="user_block profile_card_mod"  ng-class="{selected_mod: data.authenticated}">
    <a class="user_avatar_w profile_card_mod" href="#/user_document/{{data.id}}/sharing_record_detail">
      <img ng-if="data.profile.thumb_url != '/assets/document.png'" ng-src="{{data.profile.thumb_url}}" alt="{{data.document_name}}" class="user_avatar_img profile_card_mod">
	  <span ng-if="data.profile.thumb_url == '/assets/document.png'" class="user_avatar_img profile_card_mod no_img_mod document_mod"></span>
    </a>
    <a class="user_name profile_card_mod" href="#/user_document/{{data.id}}/sharing_record_detail">{{data.document_name}}</a>
    <div class="user_info profile_card_mod">{{data.parent.name}}</div>
    <div class="user_text profile_card_mod" ng-if="data.profile.summary">
      <p>{{data.profile.summary}}</p>
    </div>
  </div>

  <footer class="profile_card_b_footer">
	<div class="user_follow_butt" ng-if="current_user_id != data.admin_id && data.followed_by_current_user == false" ng-click="follow_me(data)"><%= t('follow') %></div>
	<div class="user_follow_butt" ng-if="current_user_id != data.admin_id && data.followed_by_current_user == true" ng-click="unfollow_me(data)"><%= t('unfollow') %></div>
    <ul class="dynamic_fields" ng-if="false">
      <li ng-repeat="(k, v) in data.searchable_fields">
        <span class="left">{{k}}</span>
        <span class="right">{{v}}</span>
      </li>
    </ul>
  </footer>
</article>