<div class="add_info_block">
  <div class="add_info_header">
	<div class="add_info_title"   ng-class="{'required_mod': data.required == 'true'}" > {{data.name}}</div>
	<div class="add_info_colapse_butt" ng-click="infoColapseButt($event)"></div>
  </div>
  <div class="add_info_content_block">
	<div class="add_info_content" ng-if="definitionValueExist()">
	  <a href="{{store.definition_value[data.id]}}" title="Click here to see file" class="file_link" download>Uploaded File</a>
	</div>
	<div class="add_info_form_block">
	  <div class="add_info_form_w">
		<div class="add_info_form_w">
		  <dl class="form_cell form_cell_v1_mod">
			<dt class="form_c_hline form_v1_mod hline_hide_mod">
			  <label for="{{data.name}}">{{data.name}}</label>
			</dt>
			<dd class="form_c_f_w form_v1_mod hline_hide_mod">
			  <input type="{{data.input_type}}" placeholder="{{data.name}}" class="f_c_field default_mod file_mod" ng-model="operation.definition_value[data.id]" ng-required="{{data.required == 'true'}}" base-sixty-four-input>
			  <span class="f_c_field_file_field">
				<span class="f_c_field_file_text"><%= t('upload_image') %></span>
				<span class="f_c_field_file_butt"><%= t('choose_file') %></span>
			  </span>
			</dd>
		  </dl>
		</div>
	  </div>
	</div>
  </div>
</div>