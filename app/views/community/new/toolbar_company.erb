	<% if current_user.type == 'Auditor' %>
		<a class="user_menu_company_butt" id="documents_to_audit_button" href="#/documents_to_audit" title="<%= I18n.t('documents_to_audit') %>"><%= I18n.t('documents_to_audit') %></a>
