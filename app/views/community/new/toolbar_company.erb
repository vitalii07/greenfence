			  </li>
		  <% end %>

		  <% if current_user.permission_list(nil).include?("add_service") %>
			  <li class="section_menu_l_item header_mod">
				<a href="#/services" title="<%= I18n.t('add_services') %>" class="section_menu_link header_mod"><%= I18n.t('add_services') %>
				</a>
				<span class="section_m_link_count header_mod">{{company_services.length || <%= current_user.company.services.count || 0 %>}}</span>
