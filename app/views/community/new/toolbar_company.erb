	<div class="user_menu_company_block">
	  <div class="user_menu_company_butt dropdown_mod"><%= t('add') %></div>
	  <div class="user_menu_company_w mod_add">
		<div class="user_menu_company_header">
		  <%= t('add') %>
		</div>
		<ul class="section_menu_list header_mod">
		  <% if current_user.permission_list(current_user.company).include?("create_operation_profile") %>
			  <li class="section_menu_l_item header_mod">
				<a href="#/operations" title="<%= I18n.t('add_operations') %>" class="section_menu_link header_mod"><%= I18n.t('add_operations') %>
				</a>
				<span class="section_m_link_count header_mod">{{operations.length || <%= current_user.company.operations_count || 0 %>}}</span>
				<a href="#/operations" title="<%= I18n.t('add_operations') %>" class="section_m_add_butt header_mod"></a>
				<!-- <span class="section_m_add_butt header_mod"></span> -->
				<!-- <a class="section_m_edit_butt header_mod" href="#/operations">Edit</a> -->
			  </li>
		  <% end %>
		  <% if current_user.permission_list(nil).include?("add_product") %>
			  <li class="section_menu_l_item header_mod">
				<a href="#/add_product" title="<%= I18n.t('add_products') %>" class="section_menu_link header_mod"><%= I18n.t('add_products') %>
				</a>
				<span class="section_m_link_count header_mod">{{company_products.length || <%= current_user.company.products_count || 0 %>}}</span>
