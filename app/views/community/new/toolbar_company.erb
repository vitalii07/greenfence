  <div id="invite_users" style="display:none" title="<%= t('invite_users') %>" ng-controller="UserInvitationCtrl">
	<div class="dialog_content">
	  <div class="dialog_form">
		<dl class="form_cell form_cell_v1_mod">
		  <dt class="form_c_hline form_v1_mod hline_hide_mod">
			<label for="name_of_user">Enter name of user</label>
		  </dt>
		  <dd class="form_c_f_w form_v1_mod hline_hide_mod">
			<input type="text" id="name_of_user" placeholder="<%= t('enter_name_of_user') %>" class="f_c_field default_mod" ng-model="invitation.name">
		  </dd>
		</dl>
		<dl class="form_cell form_cell_v1_mod">
		  <dt class="form_c_hline form_v1_mod hline_hide_mod">
			<label for="Enter_email_of_user">Enter email of user</label>
		  </dt>
		  <div class="send_invite_butt" style="width: 26%;float: right;padding: 0px;" ng-click="addUser(invitation)"><%= t('add_to_list') %></div>
		  <dd class="form_c_f_w form_v1_mod hline_hide_mod" style="width:73%">
			<input type="text" required="required" id="Enter_email_of_user" placeholder="<%= t('enter_email_of_user') %>" class="f_c_field default_mod" ng-model="invitation.email">
		  </dd>
		</dl>
		<ul class="options_b_value_list checkbox_big_list_dialog">
		  <li class="options_b_value_l_item checkbox_big_list_dialog">
			<label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
			  <input value="User" class="lbl_inp_rb_ch" type="radio" ng-model='invitation.type' name="invitation_type" ng-init="invitation.type='User'">
			  <span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod"><%= t('invite_as_a_user') %></span>
			</label>
		  </li>
		  <li class="options_b_value_l_item checkbox_big_list_dialog">
			<label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
			  <input value="Company" class="lbl_inp_rb_ch" type="radio" ng-model='invitation.type' name="invitation_type">
			  <span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod"><%= t('invite_as_a_company') %></span>
			</label>
		  </li>
		  <% if current_user.company!=nil %>
			  <li class="options_b_value_l_item checkbox_big_list_dialog">
				<label class="lbl_rb_ch_block lbl_rb_ch_default_mod">
				  <input value="CompanyEmployee" class="lbl_inp_rb_ch" type="radio" ng-model='invitation.type' name="invitation_type">
				  <span class="lbl_rb_ch_text lbl_rb_ch_t_default_mod lbl_rb_ch_t_default_green_white_mod"><%= t('invite_as_a_company_employee') %></span>
				</label>
			  </li>
		  <% end %>
		</ul>
	  </div>
	  <dl class="options_block">
		<dt class="options_b_hline">
		  <a href="" ng-click="import_gmail_contacts()"> + <%= t('import_contacts_from_gmail') %></a>
		</dt>
		<dt class="options_b_hline">
		  <a href="" ng-click="import_yahoo_contacts()"> + <%= t('import_contacts_from_yahoo') %></a>
		</dt>
	  </dl>
	  <div class="added_el_block" ng-if="invitedUsers.length > 0">
		<div class="users_list_title added_mod">{{invitedUsers.length}} Users Added</div>
		<ul class="users_list added_mod">
		  <li class="users_l_item added_mod" ng-repeat="user in invitedUsers">
			<div class="user_block small_mod hover_mod ">
			  <div class="user_avatar_w small_mod hover_mod ">
				<span class="user_avatar_img small_mod hover_mod no_img_mod" ng-if="!user.photo_url"></span>
				<img ng-if="user.photo_url" ng-src="{{user.photo_url}}" alt="{{user.name}}" class="user_avatar_img small_mod hover_mod"/>
			  </div>
			  <div class="user_name small_mod hover_mod">{{user.name + " ("+ user.email + ")"}}</div>
			</div>
			<div class="user_remove_butt" ng-click="remove_selected_user($index)"><%= t('remove') %></div>
		  </li>
		</ul>
	  </div>
	</div>
	<footer class="dialog_footer">
	  <div class="dialog_cancel_butt"><%= t('cancel') %></div>
	  <div id="msg_box"></div>
	  <div class="send_invite_butt" ng-click='inviteUsers(invitation, invitedUsers)'><%= I18n.t('send_an_Invite') %></div>
	</footer>
  </div>
</div>
