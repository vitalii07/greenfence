<div class="add_info_block">
  <div class="add_info_header">
	<div class="add_info_title " ng-class="{required_mod: required}">{{hline}}</div>
	<div class="add_info_colapse_butt"></div>
  </div>
  <div class="add_info_content_block">
	<div class="add_info_content" ng-if="fcontent">
	  <p>{{fcontent}}</p>
	</div>
	<div class="add_info_form_block">
	  <div class="add_info_form_w">
		<dl class="form_cell form_cell_v1_mod" ng-class="dlclass" ng-if="blockview == 'text_field'">
		  <dt class="form_c_hline form_v1_mod hline_hide_mod" ng-class="containersclass">
			<label for="{{id}}">{{ptitle}}</label>
		  </dt>
		  <dd class="form_c_f_w form_v1_mod hline_hide_mod" ng-class="containersclass">
			<input type="text" id="{{id}}"
				   placeholder="{{ptitle}}"
				   class="f_c_field"
				   ng-model="model"
				   ng-class="fieldclass"/>
		  </dd>
		</dl>
		<dl class="form_cell form_cell_v1_mod" ng-class="dlclass" ng-if="blockview == 'textarea'">
		  <dt class="form_c_hline form_v1_mod hline_hide_mod" ng-class="containersclass">
			<label for="{{id}}">{{ptitle}}</label>
		  </dt>
		  <dd class="form_c_f_w form_v1_mod hline_hide_mod" ng-class="containersclass">
			<textarea id="{{id}}"
					  placeholder="{{ptitle}}"
					  class="f_c_field"
					  ng-model="model"
					  ng-class="fieldclass"></textarea>

		  </dd>
		</dl>
	  </div>
	</div>
  </div>
</div>

