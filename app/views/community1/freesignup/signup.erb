            </div>
        </div>
    </div>

    </div>
        <script>
            var alert = function(type, text){
                $('#alert').text(text).fadeIn().addClass(type)
                setTimeout(function(){
                    $('#alert').fadeOut()
                }, 4000)
                setTimeout(function(){
                    $('#alert').text('').removeClass(type)
                }, 4600)
            }

            $('#password').tooltipsy({alignTo:'cursor'})

            $('.account-creation form').submit(function(){
                var first_name = $(this).find('input.firstname').val()
                var last_name = $(this).find('input.lastname').val()
                var email = $(this).find('input.email').val()
                var password = $(this).find('input.password').val()
                var password_confirmation = $(this).find('input.password_confirmation').val()
                if (first_name.trim() == '') { alert('error', 'First name required.') }
                else if (last_name.trim() == '') { alert('error', 'Last name required.') }
                else if (email == '') { alert('error', 'Email required.') }
                else if (password == '') { alert('error', 'Password required.') }
                else if (password != password_confirmation) { alert('error', 'Password doesn\'t match the confirmation.') }
                else { alert('success', 'Signing up!')  ; return true ;}
                return false
            })

            $( document ).ready(function() {
                if ($("#messagetext").text() == "Signed out successfully.") {
                    alert("success" , $("#messagetext").text());
                }
                else if ($("#messagetext").text() != ""){
                    alert("error" , $("#messagetext").text());
                }
            });
        </script>
    </body>

