                          </div>
                        </div>
                        <div class='row'>
                          <div class='input'> 
                            <%= password_field_tag(:password , nil,  placeholder: "Password", :class => 'password', title: 'Minimum six characters') %>
                          </div>
                        </div>
                        <div class='row'>
                          <div class='input'>
                            <%= password_field_tag(:password_confirmation, nil, placeholder: "Re-enter Password", :class => 'password_confirmation') %>
                          </div>
                        </div>
