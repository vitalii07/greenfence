                </li>
            {{/facilities}}
        </ul>
    </div>
    <div class="controls">
        <a href="#" class="carousel-btn left prev-slide"></a>
        <a href="#" class="carousel-btn right next-slide"></a>
    </div>
    <a href="#" id = "facilities-list-view" class="list-view">List View</a>
</script>

