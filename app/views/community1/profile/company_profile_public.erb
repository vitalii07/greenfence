<!-- mustache section -->

<script type="x-tmpl-mustache" id="company">
    <div class="company-gist">
        {{#company}}
        <div class="content_main">
            <div class="avatar">
                {{#logo}}
                    {{#logo}}
                        {{#thumb}}
                            {{#url}}
                                <img src = {{url}} width="140" height="140" alt="company image" id="company_image">
                            {{/url}}
                            {{^url}}
                                <img src = "https://secure.gravatar.com/avatar/eb2f3b2e6536d999517c92976b0be665?d=mm" width="140" height="140" alt="company image" id="company_image">
                            {{/url}}
                        {{/thumb}}
                    {{/logo}}
                {{/logo}}
            </div>
            <div class="company-info">
                <h2 class="company-title">{{company_name}} <span class="verified"></span></h2>
                <span class="location-meta">{{company_location}} / {{type}}</span>
                <br>
                <button class="subscribe-btn">Subscribe</button>
                <p class="company-desc">
                    {{company_desc}}
                </p>
                <div class="company-stats">
                    <div class="stat">
                        <span class="figure">{{products_count}}</span>
                        <span class="legend">Products</span>
                    </div>
                    <div class="stat">
                        <span class="figure">{{facilities_count}}</span>
                        <span class="legend">Facilities</span>
                    </div>
                    <div class="stat">
                        <span class="figure">{{certificates_count}}</span>
                        <span class="legend">Certificates</span>
                    </div>
                    <div class="stat">
                        <span class="figure">{{users_count}}</span>
                        <span class="legend">Employees</span>
                    </div>
                </div>
            </div>
        </div>
        {{/company}}
    </div>   
</script>

<script type="x-tmpl-mustache" id="products_list">    
    <div id="slider1" class="product-grid">
        <ul class="parentUl">
            {{#company_products}}
                <li class='parentLi'>
                    <div class="product-image">
                        <span class="product-tag" style="text-overflow: ellipsis; overflow: hidden; width: 100px; white-space: nowrap;">{{name}}</span>
                        <a href="#" class="product-info-icon"></a>
                        <div class="product-hover" style="z-index: 50;">
                            <h4>{{name}}</h4>
                            <p>{{description}}</p>
                            <a href="product_detail?id={{id}}" class="view-product">View</a>
                        </div>
                        <img src = <%= asset_path 'freeapp/tea.png' %> />
                    </div>
                </li>
            {{/company_products}}                
        </ul>
    </div>
    <div class="controls">
        <a href="#" class="carousel-btn left prev-slide"></a>
        <a href="#" class="carousel-btn right next-slide"></a>
    </div>
    <a href="#" id = "products-list-view" class="list-view">List View</a>
</script>

